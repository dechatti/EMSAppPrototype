@model List<EMSAppPrototype.EntityModels.Employee>
@{
    ViewBag.Title = "Index";
}

<h2>Employee</h2>
<p>
    <a class="btn btn-primary" href="@Url.Action("Create","Employee")">Add Employee</a>
</p>
<table class="table table-hover table-bordered">
    <thead>
        <tr>
            <th>Email</th>
            <th>Phone</th>
            <th>Salary</th>
            <th>Adress</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @if(Model.Count==0)
            {
                <tr>
                    <td colspan="5"><center class="alert alert-danger">No records found</center></td>
                </tr>
            }
            else
            {
                foreach(var employee in Model)
                {
                    <tr>
                        <td>@employee.Email</td>
                        <td>@employee.Phone</td>
                        <td>@employee.Salary</td>
                        <td>@employee.Address</td>
                        <td>
                            <a class="btn btn-warning btn-sm" href="@Url.Action("Edit", "Employee", new { id = EMSAppPrototype.Helper.Encrypt(employee.Id) })">Edit</a>
                            <a class="btn btn-danger btn-sm" href="@Url.Action("Delete","employee", new { id= EMSAppPrototype.Helper.Encrypt(employee.Id) })">Delete</a>
                        </td>
                    </tr>
                }
            }
    </tbody>

</table>

